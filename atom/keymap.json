{
  "atom-workspace": {
    "alt-k": "custom:open-karma"
  },

  "atom-text-editor:not([mini])": {
    "ctrl-'": "toggle-quotes:toggle",
    "ctrl-h": "editor:toggle-line-comments",
    "ctrl-i": "editor:auto-indent",
    "ctrl-e": "emmet:expand-abbreviation",
    "alt-c": "spell-check:correct-misspelling"
  },

  "atom-text-editor[data-grammar=\"source js jsx\"]:not([mini])": {
    "ctrl-e": "emmet:expand-abbreviation"
  },

  "atom-text-editor.vim-mode:not(.insert-mode)": {
    "\\": "vim-mode:search-current-word",
    "ø": "custom:move-to-beginning-of-screen-line",
    "æ": "custom:move-to-end-of-screen-line"
  },

  "body": {
    "alt-0": "window:reset-font-size"
  }
}
